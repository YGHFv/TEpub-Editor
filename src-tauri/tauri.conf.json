{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TEpub-Editor",
  "version": "0.3.0",
  "identifier": "com.epubeditor.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "TEpub-Editor-TXT",
        "label": "main",
        "width": 800,
        "height": 600,
        "dragDropEnabled": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": [
          "txt"
        ],
        "name": "Text File",
        "description": "Open Text File with TEpub-Editor",
        "role": "Editor"
      },
      {
        "ext": [
          "epub"
        ],
        "name": "EPUB File",
        "description": "Open EPUB File with TEpub-Editor",
        "role": "Editor"
      }
    ]
  }
}